  <div class="col-md-6">
    <div class="panel panel-default panel-dash">
      <div class="panel-heading text-center">
        <h3 class="panel-title">Applications Sent Out</h3>
      </div>
      <div class="panel-body">
        <div class="list-group">
          <% if current_entity.applications.pending.any? %>
            <% current_entity.applications.pending.each do |application| %>
              <div class="list-group-item four-panel-page">
                <h4 class="list-group-item-heading">Application for <%= link_to application.party.name, application.party %></h4>
                <p class="list-group-item-text"><%= application.status %></p>
              </div>
            <% end %>
          <% else %>
            <div class="list-group-item">
              <h3>No Pending Applications</h3>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="panel panel-default panel-dash">
      <div class="panel-heading text-center">
        <h3 class="panel-title">Denied Applications</h3>
      </div>
      <div class="panel-body">
        <div class="list-group">
          <% if current_entity.applications.declined.any? %>
            <% current_entity.applications.declined.each do |application| %>
              <div class="list-group-item four-panel-page">
                <h4 class="list-group-item-heading">Application for <%= link_to application.party.name, application.party %></h4>
                <p class="list-group-item-text"><%= application.status %></p>
              </div>
            <% end %>
          <% else %>
            <div class="list-group-item">
              <h3>No Declined Applications</h3>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="panel panel-default panel-dash">
      <div class="panel-heading text-center">
        <h3 class="panel-title">Pending Event Applications</h3>
      </div>
      <div class="panel-body">
        <div class="list-group">
          <% if current_entity.event_joiners.application.any? %>
            <% current_entity.event_joiners.application.each do |application| %>
              <div class="list-group-item four-panel-page">
                <h4 class="list-group-item-heading">Application for <%= application.event.title %></h4>
                <p class="list-group-item-text">
                  <% if application.status %>
                  Application Submitted
                  <% end %>
                </p>
              </div>
            <% end %>
          <% else %>
          <div class="list-group-item">
            <h3>No Pending Event Applications</h3>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="panel panel-default panel-dash">
      <div class="panel-heading text-center">
        <h3 class="panel-title">Denied Event Applications</h3>
      </div>
      <div class="panel-body">
        <div class="list-group">
          <% if current_entity.event_joiners.denied.any? %>
            <% current_entity.event_joiners.denied.each do |application| %>
              <div class="list-group-item four-panel-page">
                <h4 class="list-group-item-heading">Application for <%= application.event.title %></h4>
                <p class="list-group-item-text"><%= application.status %></p>
              </div>
            <% end %>
          <% else %>
            <div class="list-group-item">
              <h3>No Declined Applications</h3>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
