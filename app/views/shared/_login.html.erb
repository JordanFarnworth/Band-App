<form id="login-form" data-fv-framework="bootstrap"
  data-fv-icon-valid="glyphicon glyphicon-ok"
  data-fv-icon-invalid="glyphicon glyphicon-remove"
  data-fv-icon-validating="glyphicon glyphicon-refresh">

  <div class="form-group">
    <label for="login-username">Username <i class="fa fa-user"></i></label>
    <input name="login-username" data-fv-notempty class="form-control" type="text" id="login-username" placeholder="Username..">
  </div>
  <div class="form-group">
    <label for="login-password">Password<i class="fa fa-code"></i></label>
    <input name="login-password" data-fv-notempty class="form-control" type="password" id="login-password" placeholder="Password..">
    <span hidden=true id="login-hint"><em>Incorrect Username or password</em></span>
  </div>
  <div class="form-group">
    <button id="login-submit" name="login-submit">Login</button>
  </div>
</form>
