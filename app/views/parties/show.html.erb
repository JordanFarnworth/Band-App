<% content_for :scripts do %>
  <script src="//maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=geometry" type="text/javascript"></script>
  <script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" type="text/javascript"></script>
<% end %>

  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <img id="party-profile-picture" src="http://www.yashdevelopers.com/images/elevation-oakwoodhills-build-A-large.jpg" alt="" />
      </div>
      <div class="col-md-8 text-center">
        <div id="party-name">

        </div>
        <div id="party-owner">

        </div>
        <div id="party-created-at">

        </div>
      </div>
    </div>

    <div class="row" id="party-info">
      <div class="col-md-4">
        <div class="panel panel-primary" id="party-social-media-panel">
          <div class="panel-heading text-center">
            <h3 class="panel-title">Social Media</h3>
          </div>
          <div class="panel-body text-center" id="party-social-media">

          </div>
        </div>
      </div>
      <div class="col-md-8">
        <div class="panel panel-primary">
          <div class="panel-heading text-center">
            <h3 class="panel-title">General Info</h3>
          </div>
          <div class="panel-body text-center" id="party-general-info">

          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <% if @party.longitude === nil && @party.latitude === nil %>
      <div class="col-md-6">
        <div>
          <h3>Map Loading, Please try refeshing the page in a moment</h3>
        </div>
      <% else %>
      </div>
      <div class="col-md-6">
        <div id="map" style="width: 550px; height: 350px;"></div>
      </div>
      <% end %>

      <div class="col-md-6">
        <div class="panel panel-primary" id="available-events">
          <div class="panel-heading text-center">
            <h3 class="panel-title">Available Events</h3>
          </div>
          <div class="panel-body">

          </div>
        </div>
      </div>

    </div>
  </div>

<%= render 'scriptstore' %>
