<div class="container">
  <div class="row text-center">
    <h3>Edit Event</h3>
  </div>
  <div class="row">
    <form class="form">
      <div class="form-group">
        <label class="sr-only" for="inputHelpBlock">Event Title</label>
        <div class="col-md-3">
          <input type="text" id="edit-event-title" value="<%= @event.title %>" class="form-control" aria-describedby="helpBlock">
        </div>
      </div>
      <div class="form-group">
        <label class="sr-only" for="inputHelpBlock">Event Title</label>
        <div class="col-md-9">
          <textarea class="form-control" id="edit-event-description" name="name" rows="3"><%= @event.description %></textarea>
        </div>
      </div>
    </form>
  </div>
  <div class="row">
    <form class="form">
      <div class="form-group">
        <div class="col-md-3">
          <input type="text" id="edit-event-st" value="<%= @event.start_time %>" class="form-control" aria-describedby="helpBlock">
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-3">
          <input type="text" id="edit-event-ed" value="<%= @event.end_time %>" class="form-control" aria-describedby="helpBlock">
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-3">
          <input type="text" disabled="true" id="inputHelpBlock" value="<%= @event.state %>" class="form-control" aria-describedby="helpBlock">
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-3">
          <input type="text" id="edit-event-price" value="<%= @event.price %>" class="form-control" aria-describedby="helpBlock">
        </div>
      </div>
    </form>
  </div>

  <br>

  <div class="row text-center">
    <button type="button" id="update-event" name="button" class="btn btn-lg btn-primary">Update Event</button>
  </div>

  <br>

  <div class="row">
    <div class="row text-center">
      <div id="simple-search">
        <h3>Search for bands to invite to this event</h3>
        <em>Note: bands will still need to accept these invitations</em>
        <br>
        <form name="search">
          <label class="search-box">
            <input type="text" id="search-band"/>
          </label>
        </form>
      </div>
    </div>

  </div>

  <br>

  <div class="row">
    <div class="col-md-6">
        <div class="panel panel-default panel-dash">
          <div class="panel-heading">
            <h5 class="panel-title">Favorited Bands</h5>
          </div>
          <div class="panel-body">
            <% if current_entity.favorites.any? %>
              <% current_entity.favorites.each do |favorite| %>
                <a href="#" class="list-group-item">
                  <h4 class="list-group-item-heading"><%= favorite.party.name %></h4>
                  <p class="list-group-item-text"><%=  favorite.created_at %></p>
                </a>
              <% end %>
            <% else %>
              <h5>You don't have any favorites yet! Don't be shy, get out there!</h5>
            <% end %>
          </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="well selected-event-bands">
        <div id="header">
          <h5>These Bands Will be invited:</h5>
        </div>
        <div class="list-group" id="bands-to-invite">

        </div>
        <div id="submit-btns" >
          <button type="button" id="add-band-to-event" class="btn btn-primary">Add Band(s)</button>
        </div>
      </div>
    </div>
  </div>

</div>
