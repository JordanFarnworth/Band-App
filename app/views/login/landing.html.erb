<div class="vegas-container">
  <div class="container-fluid">
    <!-- <video autoplay loop id="bgvid">
      <source src="/assets/guitar.mp4" type="video/mp4">
    </video> -->
    <div class="row">
      <div class="logo-welcome col-md-5 col-md-offset-7">
        <div class="logo-welcome-content">
          <div class="main-text">
            <h1>TBA</h1>
            <h4>We bring bands and venues together like never before</h4>
            <div class="button-farm">
              <% if logged_in? %>
                <span class="learn-more-button text-center">
                  <%= link_to 'Go to your Dashboard', root_path, class: 'landing-page-button' %>
                </span>
              <% else %>
                <span class="learn-more-button text-center">
                  <%= link_to 'About', about_path, class: 'landing-page-button' %>
                </span>
                <span class="learn-more-button text-center">
                  <a data-toggle="modal" data-target="#login-modal" class='landing-page-button' href="#"> Login </a>
                </span>
                <span class="learn-more-button text-center">
                  <a class="landing-page-button" data-toggle="modal" data-target="#signup-modal" href="#">Signup</a>
                </span>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div id="login-modal" class="modal fade">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
              <h4 class="modal-title">Login to Noizy</h4>
            </div>
            <div class="modal-body">
              <%= render partial: 'shared/login', locals: { show_incorrect: false } %>
            </div>
          </div>
        </div>
      </div>

      <div id="signup-modal" class="modal fade">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
              <h4 class="modal-title">Signup for Noizy</h4>
            </div>
            <div class="modal-body">
              <%= render 'register'%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- JQuery for fixed button width-->
<script>
$('.myButton').width(
    Math.max.apply(
        Math,
        $('.myButton').map(function(){
            return $(this).outerWidth();
        }).get()
    )
);
$(function() {
    $('body').vegas({
        slides: [
          { src: '/assets/hands.jpg'},
          { src: '/assets/dj.jpg' },
          { src: '/assets/guitarist.jpg'}
        ]
    });
});
</script>
