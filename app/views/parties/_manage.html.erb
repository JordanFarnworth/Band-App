<div class="container">
  <div class="row text-center">
    <div class="col-md-6">
      <h4>My Events</h4>
      <% current_entity.events.each do |event| %>
        <a href="/events/<%= event.id %>" class="list-group-item">
          <h4 class="list-group-item-heading">Event: <%= event.title %></h4>
          <p class="list-group-item-text"><%=  event.start_time == nil ? 'nil' : event.start_time %></p>
          <p><%= event.state %></p>
        </a>
      <% end %>
    </div>

    <div class="col-md-6">
      <h4>Options</h4>
      <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myEventModal">
        Create Event
      </button>
    </div>
  </div>
</div>
