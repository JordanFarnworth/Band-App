<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <%= bootstrap_form_for @payment do |f| %>
      <div id="payment_container"></div>
      <%= f.select :amount, options_for_select(Payment::SUBSCRIPTION_OPTIONS.map { |v| ["#{v[:text]} at $#{v[:price_per_month]} per month", v[:price]] }), value: @payment.amount %>
      <%= f.primary %>
    <% end %>
  </div>
</div>
<script>
  braintree.setup('<%= Braintree::ClientToken.generate %>', 'dropin', {
    container: 'payment_container'
  });
</script>
