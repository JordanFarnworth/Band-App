<div class="col-md-10 col-md-offset-1">
  <div class="panel panel-default panel-dash">
    <div class="panel-heading text-center">
      <h3 class="panel-title">Favorited Companies</h3>
    </div>
    <div class="panel-body">
      <div class="col-md-offset-1">
        <% current_entity.favorites.band.each do |favorite| %>
          <div class="list-group-item col-md-5 two-panel-page">
            <h4 class="list-group-item-heading"><%= link_to favorite.party.name, favorite.party %></h4>
            <p class="list-group-item-text">Favorited on: <%=  favorite.created_at.to_formatted_s(:long_ordinal) %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
