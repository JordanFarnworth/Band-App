<div class="row">
  <div class="row text-center">
    <div>
      <h3>Search for bands to invite to this event</h3>
      <em>Note: bands will still need to accept these invitations</em>
      <br>
      <form name="search">
        <label class="search-box">
          <input type="text" id="search-band"/>
        </label>
      </form>
    </div>
  </div>

</div>

<br>

<div class="row">
  <div class="col-md-6">
      <div class="panel panel-default panel-dash">
        <div class="panel-heading">
          <h5 class="panel-title">Favorited Bands</h5>
        </div>
        <div class="panel-body">
          <% if current_entity.favorites.party.any? %>
            <% current_entity.favorites.party.each do |favorite| %>
              <div  class="list-group-item">
                <h4 class="list-group-item-heading"><%= favorite.band.name %>
                <span class="pull-right">
                  <a  class="fav-list" name="<%= favorite.band.name %>" id="<%= favorite.band.id %>">
                    <i class="fa fa-plus"></i>
                  </a>
                  <a href="/bands/<%= favorite.band.id %>" id="link-to-band">
                    <i class="fa fa-external-link-square"></i>
                  </a>
                  <a  class="trash-list" id="<%= favorite.band.id %>">
                    <i class="fa fa-trash-o"></i>
                  </a>
                </span>
                </h4>
                <p class="list-group-item-text"><%=  favorite.created_at %></p>
              </div>
            <% end %>
          <% else %>
            <h5>You don't have any favorites yet! Don't be shy, get out there!</h5>
          <% end %>
        </div>
    </div>
  </div>
  <div class="col-md-6">
    <%= render 'willbeinvited' %>
  </div>
</div>
