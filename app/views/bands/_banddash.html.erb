<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default panel-dash">
      <div class="panel-heading">
        <h3 class="panel-title">Applications Sent Out</h3>
      </div>
      <div class="panel-body">
        <div class="list-group">
          <% current_entity.applications.each do |application| %>
            <a href="#" class="list-group-item">
              <h4 class="list-group-item-heading">Application for <%= application.party.name %></h4>
              <p class="list-group-item-text"><%= application.status %></p>
            </a>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="panel panel-default panel-dash">
      <div class="panel-heading">
        <h3 class="panel-title">Invitations to Play</h3>
      </div>
      <div class="panel-body">
        Panel content
      </div>
    </div>
  </div>

</div>

<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default panel-dash">
      <div class="panel-heading">
        <h3 class="panel-title">Upcoming Events</h3>
      </div>
      <div class="panel-body">
        <% current_entity.events.each do |event| %>
          <a href="#" class="list-group-item">
            <h4 class="list-group-item-heading">Event: <%= event.title %></h4>
            <p class="list-group-item-text"><%=  event.start_time == nil ? 'nil' : event.start_time %></p>
          </a>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="panel panel-default panel-dash">
      <div class="panel-heading">
        <h3 class="panel-title">Event Invitations</h3>
      </div>
      <div class="panel-body">
        Panel content
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="panel panel-default panel-dash">
      <div class="panel-heading">
        <h3 class="panel-title">Promote Band</h3>
      </div>
      <div class="panel-body">
        Panel content
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="panel panel-default panel-dash">
      <div class="panel-heading">
        <h3 class="panel-title">Favorited Companies</h3>
      </div>
      <div class="panel-body">
        <% current_entity.favorites.each do |favorite| %>
          <a href="#" class="list-group-item">
            <h4 class="list-group-item-heading"><%= favorite.party.name %></h4>
            <p class="list-group-item-text"><%=  favorite.created_at %></p>
          </a>
        <% end %>
      </div>
    </div>
  </div>
</div>
