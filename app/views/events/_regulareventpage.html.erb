<% content_for :scripts do %>
  <script src="//maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=geometry" type="text/javascript"></script>
  <script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" type="text/javascript"></script>
<% end %>
  <input type="button" id="event-latitude" name="name" hidden="true" value="<%= @event.latitude %>">
  <input type="button" id="event-longitude" name="name" hidden="true" value="<%= @event.longitude %>">

<div class="container">
  <div class="row">
    <%= @event.title %>
    <br>
    <%= @event.description %>
    <br>
    <%= @event.start_time %>
    <br>
    <%= @event.end_time %>
    <br>
    <%= @event.state %>
    <br>
    <%= @event.price %>
    <br>
    <%= @event.address %>
    <br>
    <%= @event.created_at %>
  </div>
  <div class="row">
      <% if @event.longitude === nil || @event.latitude === nil %>
      <div class="col-md-12">
        <div>
          <h3>Map Loading, Please try refeshing the page in a moment</h3>
        </div>
      <% else %>
      </div>
      <div class="col-md-12">
        <div id="map" style="width: 100%; height: 350px;"></div>
      </div>
      <% end %>
  </div>
  <div class="row">
    <h2 class="center">Attending Event:</h2>
    <%= render 'events/statusofinvited' %>
  </div>
</div>
